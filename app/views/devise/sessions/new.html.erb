<div class="container">
    <div class="page-header">
        <h1 id="pagetitle" style="margin-top: 50px;">Sign in</h1>
    </div>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      
        <div style="margin:0;padding:0;display:inline">
        <div class="control-group tel optional">
            <label class="tel optional control-label control-label" for="message_phone">email</label>
            <div class="controls">
                <%= f.email_field :email, :autofocus => true %>
            </div>
        </div>
        <div class="control-group text optional">
            <label class="text optional control-label" for="message_message">password</label>
        <div class="controls">
                <%= f.password_field :password %>
            </div>
        </div>
        <% if devise_mapping.rememberable? -%>
         <div class="control-group text optional">
            <label class="text optional control-label" for="message_message">remember_me </label>
        <div class="controls">
                <%= f.check_box :remember_me %>
            </div>
        </div>
        <% end -%>
        <div id="sendbtn" class="form-actions">
            <%= f.submit "Sign in" %>
        </div>
    <%end%>
    <%= render "devise/shared/links" %>
</div>